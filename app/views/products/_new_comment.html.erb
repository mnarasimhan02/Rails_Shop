<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    <p>
      <div class="rating"></div>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
<p class="notice"><%= notice %></p>
  <% if notice %>
      <p id="notice" class="notice notice-info"><%= notice %></p>
  <% end %>
<p class="alert"><%= alert %></p>
  <% if alert %>
      <p id="alert" class="alert alert-info"><%= alert %></p>
  <% end %>