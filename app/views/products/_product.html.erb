<% cache product do %>
  <div class="row">
	<div class="col-sm-6 col-md-3">
        <%= image_tag(product.image_url, class: "img-responsive") %>
	    <%= link_to 'Edit', edit_product_path(product) %>
        <% if signed_in? && current_user.admin? %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
	</div>
    <div class="col-sm-6 col-md-9">
 	 <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <p>Average Rating: <div class="rated" data-score="<%= product.average_rating %>"></div> </p>
        <p><b>Color:</b> <%= product.colour %></p>
        <span class="lead"><%= number_to_currency(product.price) %></span><br>
        <p><%= link_to "Add to Cart and Review Product", product %></p>
        </div><!-- /col -->
          </div><!-- row -->
<% end %>