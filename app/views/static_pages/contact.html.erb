<h1>Contact Us</h1>
<%= flash[:notice] %>
<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <label for="name">Name (required):</label>
        <input type="text" id="name" name="name" class= "form-control" value="" 
        aria-describedby="name-format" aria-required="true" 
        pattern="[A-Za-z-0-9]+\s[A-Za-z-'0-9]+" placeholder="Firstname Lastname">
        <span id="name-format" class="help">Format: firstname lastname</span>
    </div>      
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message, "Message" %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div>      
  </div>
</div>
<%= submit_tag "Send" %>   
<% end %>